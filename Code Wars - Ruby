def solution(input, markers)
  lines = input.split("\n")
  new_lines = lines
  markers.each do |marker|
    lines.each_with_index do |line, idx|
      if line.include?(marker)
        new_lines[idx] = line.split(marker)[0].strip
      else
        new_lines[idx] = line.strip
      end
      # print "#{line} | needs to remove after #{marker}"
      # puts
    end
  end
  new_lines.join("\n")
end



print solution("apples, plums % and bananas\npears\noranges !applesauce", ["%", "!"])
# "apples, plums\npears\noranges"
#puts solution("Q @b\nu\ne -e f g", ["@", "-"]) # "Q\nu\ne"
